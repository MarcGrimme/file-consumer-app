{
  "update_url": "https://marcgrimme.github.io/file-consumer-app/updates.xml",
  "name": "Files Consumer App",
  "version": "1.1",
  "manifest_version": 2,
  "icons": {
    "128": "icon_128.png",
    "16": "icon_16.png"
  },
  "kiosk_enabled": true,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "unlimitedStorage",
    "storage",
    { "fileSystem": [ "retainEntries", "directory" ] }
  ]
}
